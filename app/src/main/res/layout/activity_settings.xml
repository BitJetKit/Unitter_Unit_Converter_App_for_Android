<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wrexl.unitter.Settings"
    android:background="#C10818">

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/decimalSet"
        android:layout_marginTop="96dp"
        android:indeterminate="false"
        android:layout_below="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:progressDrawable="@drawable/progress"
        android:thumb="@drawable/thumb"
        android:minHeight="8dip"
        android:maxHeight="8dip"
        android:typeface="sans"/>

    <Spinner style="@style/languageSpinner"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:id="@+id/language1"
        android:layout_below="@+id/title_languge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:typeface="sans" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Language"
        android:id="@+id/title_languge"
        android:layout_below="@+id/decimalSet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="29dp"
        android:textColor="#fffefefe"
        android:typeface="sans"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Decimal Number"
        android:id="@+id/title_decimal"
        android:layout_marginBottom="41dp"
        android:layout_alignBottom="@+id/decimalSet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fffefefe"
        android:typeface="sans"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Settings"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:textSize="34dp"
        android:textColor="#fffefefe"
        android:layout_alignRight="@+id/decimalSet"
        android:layout_alignEnd="@+id/decimalSet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="sans"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/setting"
        android:layout_alignTop="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/decimalNumber"
        android:layout_alignStart="@+id/decimalNumber"
        android:layout_above="@+id/decimalNumber" />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="RESTORE"
        android:id="@+id/restore"
        android:background="@drawable/button_rounded"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="SAVE"
        android:id="@+id/save"
        android:background="@drawable/button_rounded"
        android:textStyle="bold"
        android:typeface="sans"

        android:textSize="14dp"
        android:layout_alignTop="@+id/restore"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="#"
        android:id="@+id/decimalNumber"
        android:textColor="#fffefefe"
        android:typeface="sans"
        android:layout_alignTop="@+id/title_decimal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
